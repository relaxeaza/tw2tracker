<nav id="main-menu">
    <div class="left">
        <a href="/"><%= i18n('home', 'main_menu') %></a>
        <a href="https://www.paypal.com/donate/?hosted_button_id=6R95QYGKFNLCE"><span class="icon icon-heart"></span> <%= i18n('donate', 'main_menu') %></a>
