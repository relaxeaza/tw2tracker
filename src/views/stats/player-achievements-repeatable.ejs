<div class="<% __append(subCategory === 'detailed' ? 'single' : 'left') %>">
    <section id="player-achievements-repeatable">
        <h2><%= navigationTitle %><% __append(subCategory === 'detailed' ? ` (${i18n.player_profile.achievements.detailed})` : '') %></h2>

        <table class="content-border">
            <colgroup>
                <col width="200px">
                <col width="*">
            </colgroup>
            <thead>
                <tr>
                    <th><%= i18n.player_profile.achievements.column_name %></th>
                    <th><% __append(subCategory === 'detailed' ? i18n.player_profile.achievements.column_earned : i18n.player_profile.achievements.column_last_earned) %></th>
                </tr>
            </thead>
            <tbody>
                <% if (achievementsRepeatable.length) { -%>
                    <% if (subCategory === 'detailed') { -%>
                        <% for (let [type, achievementDates] of Object.entries(achievementsRepeatableDetailed)) { %>
                            <tr>
                                <td><%= achievementTitles[type] %> (<%= achievementDates.length %>x)</td>
                                <td><%= achievementDates.join(', ') %></td>
                            </tr>
                        <% } %>
                    <% } else { -%>
                        <% for (let [type, count] of Object.entries(achievementsRepeatableCount)) { %>
                            <tr>
                                <td><%= achievementTitles[type] %> (<%= count %>x)</td>
                                <td><%= achievementsRepeatableLastEarned[type] || i18n.player_profile.achievements.never %></td>
                            </tr>
                        <% } %>
                    <% } -%>
                <% } else { -%>
                    <tr>
                        <td colspan="2"><%= i18n.player_profile.achievements.category_no_achievements %></td>
                    </tr>
                <% } -%>
            </tbody>
        </table>

        <div class="section-actions">
            <% if (subCategory === 'detailed') { -%>
                    <a href="/stats/<%= marketId %>/<%= worldNumber %>/players/<%= player.id %>/achievements/repeatable"><%= i18n.player_profile.achievements.view_simple_achievements %></a>
            <% } else { -%>
                <a href="/stats/<%= marketId %>/<%= worldNumber %>/players/<%= player.id %>/achievements/repeatable/detailed"><%= i18n.player_profile.achievements.view_detailed_achievements %></a>
            <% } -%>
        </div>
    </section>
</div>
