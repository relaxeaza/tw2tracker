<!DOCTYPE html>
<html lang="en">
    <%- include('../head.ejs') %>
    <body>
        <header id="main-header"></header>
        <%- include('../menu.ejs') %>

        <main class="content-border">
            <%- include('../navigation.ejs') %>

            <div class="content">
                <div class="left">
                    <h2><%= i18n.tribe_profile.member_changes.header_tribe_member_changes %></h2>
                    <table class="content-border">
                        <colgroup>
                            <col width="200px">
                            <col width="*">
                            <col width="100px">
                        </colgroup>
                        <thead>
                            <tr>
                                <th><%= i18n.tribe_profile.member_changes.column_date_hour %></th>
                                <th><%= i18n.tribe_profile.member_changes.column_player %></th>
                                <th><%= i18n.tribe_profile.member_changes.column_action %></th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (memberChanges.length) { -%>
                                <% for (let change of memberChanges) { %>
                                    <tr>
                                        <td><%= formatDate(change.date, world.time_offset, 'hours-only') %></td>
                                        <td><a href="/stats/<%= marketId %>/<%= worldNumber %>/players/<%= change.player.id %>"><%= change.player.name %></a></td>

                                        <% if (change.type === tribeMemberChangeTypes.LEFT) { -%>
                                            <td><%= i18n.tribe_profile.member_changes.left %></td>
                                        <% } else { -%>
                                            <td><%= i18n.tribe_profile.member_changes.join %></td>
                                        <% } -%>
                                    </tr>
                                <% } %>
                            <% } else { -%>
                                <tr>
                                    <td colspan="4"><%= i18n.tribe_profile.member_changes.no_changes %></td>
                                </tr>
                            <% } -%>
                        </tbody>
                    </table>
                </div>
            </div>
        </main>

        <%- include('../footer.ejs') %>
    </body>
</html>
