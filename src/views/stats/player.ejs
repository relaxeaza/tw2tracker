<!DOCTYPE html>
<html lang="en">
    <%- include('../head.ejs') %>
    <body>
        <header></header>
        <%- include('../menu.ejs') %>

        <main class="content-border">
            <%- include('../navigation.ejs') %>

            <div class="content">
                <div class="left">
                    <section id="player">
                        <h2><%= i18n.player_profile.header_player_profile %></h2>

                        <div class="content-border">
                            <table class="vertical">
                                <colgroup>
                                    <col width="50%">
                                    <col width="50%">
                                </colgroup>
                                <tbody>
                                    <tr>
                                        <th><%= i18n.player_profile.player_rank %></th>
                                        <td><%= formatNumbers(player.rank) %></td>
                                    </tr>
                                    <tr>
                                        <th><%= i18n.player_profile.player_name %></th>
                                        <td><%= player.name %></td>
                                    </tr>
                                    <tr>
                                        <th><%= i18n.player_profile.player_tribe %></th>
                                        <td>
                                            <% if (tribe) { %>
                                                <a href="/stats/<%= marketId %>/<%= worldNumber %>/tribes/<%= tribe.id %>"><%= tribe.name %> (<%= tribe.tag %>)</a>
                                            <% } else { %>
                                                <%= i18n.player_profile.no_tribe %>
                                            <% } %>
                                        </td>
                                    </tr>
                                    <tr>
                                        <th><%= i18n.player_profile.player_villages %></th>
                                        <td><a href="/stats/<%= marketId %>/<%= worldNumber %>/players/<%= player.id %>/villages"><%= formatNumbers(player.villages) %></a></td>
                                    </tr>
                                    <tr>
                                        <th><%= i18n.player_profile.player_points %></th>
                                        <td><%= formatNumbers(player.points) %></td>
                                    </tr>
                                    <tr>
                                        <th><%= i18n.player_profile.player_bash_attack %></th>
                                        <td><%= formatNumbers(player.bash_points_off) %></td>
                                    </tr>
                                    <tr>
                                        <th><%= i18n.player_profile.player_bash_defense %></th>
                                        <td><%= formatNumbers(player.bash_points_def) %></td>
                                    </tr>
                                    <tr>
                                        <th><%= i18n.player_profile.player_avg_points_village %></th>
                                        <td><%= formatNumbers(player.points_per_villages) %></td>
                                    </tr>
                                    <tr>
                                        <th><%= i18n.player_profile.player_tribe_changes %></th>
                                        <td><a href="/stats/<%= marketId %>/<%= worldNumber %>/players/<%= player.id %>/tribe-changes"><%= formatNumbers(tribeChangesCount) %></a></td>
                                    </tr>
                                    <tr>
                                        <th><%= i18n.player_profile.player_conquests %></th>
                                        <td>
                                            <a href="/stats/<%= marketId %>/<%= worldNumber %>/players/<%= player.id %>/conquests"><%= formatNumbers(conquestCount) %></a>
                                            (+<a href="/stats/<%= marketId %>/<%= worldNumber %>/players/<%= player.id %>/conquests/gain"><%= formatNumbers(conquestGainCount) %></a>
                                            -<a href="/stats/<%= marketId %>/<%= worldNumber %>/players/<%= player.id %>/conquests/loss"><%= formatNumbers(conquestLossCount) %></a>
                                            =<a href="/stats/<%= marketId %>/<%= worldNumber %>/players/<%= player.id %>/conquests/self"><%= formatNumbers(conquestSelfCount) %></a>)
                                        </td>
                                    </tr>
                                    <tr>
                                        <th><%= i18n.player_profile.player_achievement_points %></th>
                                        <td><a href="/stats/<%= marketId %>/<%= worldNumber %>/players/<%= player.id %>/achievements"><%= formatNumbers(achievementPoints) %></a></td>
                                    </tr>
                                    <tr>
                                        <th><%= i18n.player_profile.player_record_rank %></th>
                                        <td><%= formatNumbers(player.best_rank) %> <small class="right"><%= formatDate(player.best_rank_date, world.time_offset, 'hours-only') %></small></td>
                                    </tr>
                                    <tr>
                                        <th><%= i18n.player_profile.player_record_points %></th>
                                        <td><%= formatNumbers(player.best_points) %> <small class="right"><%= formatDate(player.best_points_date, world.time_offset, 'hours-only') %></small></td>
                                    </tr>
                                    <tr>
                                        <th><%= i18n.player_profile.player_record_villages %></th>
                                        <td><%= formatNumbers(player.best_villages) %> <small class="right"><%= formatDate(player.best_villages_date, world.time_offset, 'hours-only') %></small></td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </section>

                    <section id="player-latest-achievements">
                        <h2><%= i18n.player_profile.header_last_achievements %></h2>

                        <div class="content-border">
                            <table>
                                <colgroup>
                                    <col width="*">
                                    <col width="130px">
                                </colgroup>
                                <thead>
                                    <tr>
                                        <th><%= i18n.player_profile.achievement_name %></th>
                                        <th><%= i18n.player_profile.achievement_date_time %></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% if (achievementsLatest.length) { -%>
                                        <% for (let achievement of achievementsLatest) { -%>
                                            <tr>
                                                <% if (achievement.category === 'repeatable') { -%>
                                                    <td><%= achievementTitles[achievement.type] %></td>
                                                    <td><%= formatDate(achievement.time_last_level, world.time_offset, 'day-only') %></td>
                                                <% } else { -%>
                                                    <td><%= achievementTitles[achievement.type] %></td>
                                                    <td><%= formatDate(achievement.time_last_level, world.time_offset, 'hours-only') %></td>
                                                <% } -%>
                                            </tr>
                                        <% } -%>
                                    <% } else { -%>
                                        <tr>
                                            <td colspan="2"><%= i18n.player_profile.no_recent_achievements %></td>
                                        </tr>
                                    <% } -%>
                                </tbody>
                            </table>
                        </div>

                        <div class="section-actions">
                            <a href="/stats/<%= marketId %>/<%= worldNumber %>/players/<%= player.id %>/achievements"><%= i18n.player_profile.view_player_achievements %></a>
                        </div>
                    </section>
                </div>

                <div class="right">
                    <section class="world-map">
                        <h2><%= i18n.stats_map.header_map %></h2>

                        <div id="map" class="content-border"></div>

                        <div class="section-actions">
                            <a href="/maps/<%= marketId %>/<%= worldNumber %>"><%= i18n.stats_map.view_world_map %></a>
                        </div>
                    </section>
                </div>
            </div>
        </main>

        <%- include('../maps/tooltip.ejs') %>
        <%- include('../footer.ejs') %>

        <script sync type="text/javascript" src="/javascripts/libs/require.min.js"></script>
        <script defer type="text/javascript">define('backendValues', () => (<%- JSON.stringify(backendValues) %>))</script>
        <script defer type="text/javascript" src="/javascripts/utils.js"></script>
        <script defer type="text/javascript" src="/javascripts/map.js"></script>
        <script defer type="text/javascript" src="/javascripts/stats.js"></script>
    </body>
</html>
