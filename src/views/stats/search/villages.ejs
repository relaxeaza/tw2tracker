<table>
    <colgroup>
        <col width="*">
        <col width="50px">
        <col width="200px">
        <col width="50px">
    </colgroup>
    <thead>
        <tr>
            <th><%= i18n.world_search.column_villages %></th>
            <th><%= i18n.world_search.column_points %></th>
            <th><%= i18n.world_search.column_owner %></th>
            <th><%= i18n.world_search.column_tribe %></th>
        </tr>
    </thead>
    <tbody>
        <% for (let village of results) { %>
            <tr>
                <td><a href="/stats/<%= marketId %>/<%= worldNumber %>/villages/<%= village.village_id %>/"><%= village.village_name %> (<%= village.village_x %>|<%= village.village_y %>)</a></td>
                <td><%= formatNumbers(village.village_points) %></td>

                <% if (village.player_id) { %>
                    <td><a href="/stats/<%= marketId %>/<%= worldNumber %>/players/<%= village.player_id %>/"><%= village.player_name %></a></td>
                <% } else { %>
                    <td><%= i18n.world_search.abandoned_village %></td>
                <% } %>

                <% if (village.tribe_id) { %>
                    <td><a href="/stats/<%= marketId %>/<%= worldNumber %>/tribes/<%= village.tribe_id %>/"><%= village.tribe_tag %></a></td>
                <% } else { %>
                    <td>-</td>
                <% } %>
            </tr>
        <% } %>
    </tbody>
</table>
