<table>
    <colgroup>
        <col width="50px">
        <col width="*">
        <col width="50px">
        <col width="50px">
        <col width="50px">
        <col width="50px">
    </colgroup>
    <thead>
        <tr>
            <th><%= i18n.world_search.column_rank %></th>
            <th><%= i18n.world_search.column_name %></th>
            <th><%= i18n.world_search.column_tag %></th>
            <th><%= i18n.world_search.column_points %></th>
            <th><%= i18n.world_search.column_villages %></th>
            <th><%= i18n.world_search.column_members %></th>
        </tr>
    </thead>
    <tbody>
        <% for (let tribe of results) { %>
            <tr>
                <td><%= formatNumbers(tribe.rank) %></td>
                <td><a href="/stats/<%= marketId %>/<%= worldNumber %>/tribes/<%= tribe.id %>/"><%= tribe.name %></a></td>
                <td><a href="/stats/<%= marketId %>/<%= worldNumber %>/tribes/<%= tribe.id %>/"><%= tribe.tag %></a></td>
                <td><%= formatNumbers(tribe.points) %></td>
                <td><%= formatNumbers(tribe.villages) %></td>
                <td><%= formatNumbers(tribe.members) %></td>
            </tr>
        <% } %>
    </tbody>
</table>
