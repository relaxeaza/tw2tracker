<div class="content" id="sync">
    <div class="left">
        <section id="sync-worlds">
            <h1><%= i18n('header_worlds', 'admin_sync', lang) %></h1>

            <div class="section-content">
                <% for (let world of openWorlds) { %>
                    <div class="world relax-container vertical" id="world-<%= world.world_id %>" data-market-id="<%= world.market %>" data-world-number="<%= world.num %>">
                        <div class="short-info">
                            <div class="world-id">
                                <span class="flag-<%= world.market %>"><%= world.market %><%= world.num %><% if (!world.open) { __append(` (${i18n('closed', 'admin_sync', lang)})`) } -%></span>
                            </div>

                            <div class="values">
                                <div class="field">
                                    [<span class="type"><%= i18n('data_info', 'admin_sync', lang) %></span>
                                    <span class="sync-status last-data-sync-status"><% __append(i18n(world.last_data_sync_status, 'admin_sync_status', lang) || '-') %></span>,
                                    <span class="sync-value last-data-sync-date" title="<% __append(world.last_data_sync_date ? formatDate(world.last_data_sync_date) : i18n('never', 'admin_sync', lang)) %>"><% __append(world.last_data_sync_date ? formatSince(world.last_data_sync_date) : i18n('never', 'admin_sync', lang)) %></span>]
                                </div>

                                <div class="field">
                                    [<span class="type"><%= i18n('achievements_info', 'admin_sync', lang) %></span>
                                    <span class="sync-status last-achievements-sync-status"><% __append(i18n(world.last_achievements_sync_status, 'admin_sync_status', lang) || '-') %></span>,
                                    <span class="sync-value last-achievements-sync-date" title="<% __append(world.last_achievements_sync_date ? formatDate(world.last_achievements_sync_date) : i18n('never', 'admin_sync', lang)) %>"><% __append(world.last_achievements_sync_date ? formatSince(world.last_achievements_sync_date) : i18n('never', 'admin_sync', lang)) %></span>]
                                </div>
                            </div>
                        </div>

                        <div class="actions">
                            <% if (world.open) { -%>
                                <% if (user.privileges[privilegeTypes.START_SYNC]) { %>
                                    <a class="sync-data relax-button<% __append(world.sync_data_active ? ' disabled' : '') %>" data-active="no" href="/admin/sync/data/<%= world.market %>/<%= world.num %>"><%= i18n('button_sync_world_data', 'admin_sync', lang) %></a>
                                    <a class="sync-achievements relax-button<% __append(world.sync_achievements_active ? ' disabled' : '') %>" data-active="no" href="/admin/sync/achievements/<%= world.market %>/<%= world.num %>"><%= i18n('button_sync_world_achievements', 'admin_sync', lang) %></a>
                                <% } %>

                                <% if (user.privileges[privilegeTypes.CONTROL_SYNC]) { %>
                                    <a class="sync-toggle relax-button <% __append(world.sync_enabled ? 'red' : 'green') %> right" href="/admin/sync/toggle/<%= world.market %>/<%= world.num %>"><%= i18n(world.sync_enabled ? 'button_disable_sync' : 'button_enable_sync', 'admin_sync', lang) %></a>
                                <% } %>
                            <% } -%>
                        </div>
                    </div>
                <% } %>
            </div>
        </section>
    </div>
    <div class="right">
        <% if (user.privileges[privilegeTypes.START_SYNC]) { %>
            <section id="sync-panel">
                <h1><%= i18n('header_panel', 'admin_sync', lang) %></h1>

                <div class="section-content">
                    <div class="actions">
                        <a id="sync-world-list" class="relax-button" data-active="no" href="/admin/sync/worlds"><%= i18n('button_sync_world_list', 'admin_sync', lang) %></a>
                    </div>
                </div>
            </section>
        <% } %>

        <section id="sync-summary">
            <h1><%= i18n('header_summary', 'admin_sync', lang) %></h1>

            <div class="section-content">
                <p>
                    <label><%= i18n('sync_data_active_worlds', 'admin_sync', lang) %></label>
                    <span id="sync-active-data-worlds">
                        <% if (syncingDataWorlds.length) { %>
                            <% for (const worldId of syncingDataWorlds) { -%>
                                <span class="world-label" data-world-id="<%= worldId %>"><%= worldId %></span>
                            <% } -%>
                        <% } else { %>
                            <%= i18n('none', 'admin_sync', lang) %>
                        <% } %>
                    </span>
                </p>
                <p>
                    <label><%= i18n('sync_achievements_active_worlds', 'admin_sync', lang) %></label>
                    <span id="sync-active-achievement-worlds">
                        <% if (syncingAchievementsWorlds.length) { %>
                            <% for (const worldId of syncingAchievementsWorlds) { -%>
                                <span class="world-label" data-world-id="<%= worldId %>"><%= worldId %></span>
                            <% } -%>
                        <% } else { %>
                            <%= i18n('none', 'admin_sync', lang) %>
                        <% } %>
                    </span>
                </p>

            </div>
        </section>
    </div>
</div>
