<!DOCTYPE html>
<html lang="en">
    <head>
        <title><%= title %></title>
        <meta name="viewport" content="width=1000 initial-scale=1"/>
        <meta name="description" content="Detailed statistics for Tribal Wars 2">
        <link rel='stylesheet' href='/stylesheets/style.css' />
        <link rel='stylesheet' href='/stylesheets/stats.css' />
        <link rel="icon" type="image/png" href="/images/favicon.png"/>
        <script type="text/javascript">
            const {
                marketId,
                worldNumber,
                players,
                tribes,
                mapHighlights
            } = <%- JSON.stringify(exportValues) %>

            const STATS_PAGE = 'home'
        </script>
    </head>
    <body>
        <header></header>
        <main class="content-border">
            <h1>
                <a href="/"><%= siteName %></a> /
                Server <a href="/stats/<%= marketId %>/"><%= marketId.toUpperCase() %></a> /
                World <a href="/stats/<%= marketId %>/<%= world.num %>/"><%= world.name %></a><%= world.open ? '' : ' (Closed)' %>
            </h1>

            <div class="content">
                <div class="left">
                    <section id="search">
                        <h2>Search</h2>

                        <div class="content-border">
                            <ul class="content-menu" id="search-categories">
                               <li data-search-category="players">Players</li>
                               <li data-search-category="tribes">Tribes</li>
                               <li data-search-category="villages">Villages</li>
                            </ul>
                            <div class="wrapper">
                                <form method="POST" action="/stats/<%= marketId %>/<%= world.num %>/search/">
                                    <input type="text" id="search-input" class="input" name="query" autocomplete="off" maxlength="20" minlength="3">
                                    <input type="submit" value="Search">
                                    <input type="hidden" id="search-category" name="category" value="">
                                </form>
                            </div>
                        </div>
                    </section>

                    <section id="tribes">
                        <h2>Tribes</h2>

                        <table>
                            <colgroup>
                                <col width="50px">
                                <col width="*">
                                <col width="50px">
                                <col width="50px">
                                <% if (world.config.victory_points) { -%>
                                    <col width="40px">
                                <% } -%>
                                <col width="50px">
                            </colgroup>
                            <thead>
                                <tr>
                                    <th>Rank</th>
                                    <th>Tribe</th>
                                    <th>Members</th>
                                    <th>Points</th>
                                    <% if (world.config.victory_points) { -%>
                                        <th title="Victory Points">VP</th>
                                    <% } -%>
                                    <th>Villages</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% for (let tribe of tribes) { %>
                                    <tr data-tribe-id="<%= tribe.id %>">
                                        <td><%= tribe.rank %></td>
                                        <td>
                                            <a href="/stats/<%= marketId %>/<%= world.num %>/tribes/<%= tribe.id %>"><%= tribe.name %></a>
                                            <% if (tribe.rank < 4) { %>
                                                <div class="color"></div>
                                            <% } %>
                                        </td>
                                        <td><%= formatNumbers(tribe.members) %></td>
                                        <td><%= formatNumbers(tribe.points) %></td>

                                        <% if (world.config.victory_points) { -%>
                                            <td><%= formatNumbers(tribe.victory_points) %></td>
                                        <% } -%>

                                        <td><%= formatNumbers(tribe.villages) %></td>
                                    </tr>
                                <% } %>
                            </tbody>
                        </table>

                        <div class="actions">
                            <a href="/stats/<%= marketId %>/<%= world.num %>/tribes/">View complete tribes ranking</a>
                        </div>
                    </section>

                    <section id="players">
                        <h2>Players</h2>

                        <table>
                            <colgroup>
                                <col width="50px">
                                <col width="*">
                                <col width="50px">
                                <col width="50px">
                                <% if (world.config.victory_points) { -%>
                                    <col width="40px">
                                <% } -%>
                                <col width="50px">
                            </colgroup>
                            <thead>
                                <tr>
                                    <th>Rank</th>
                                    <th>Player</th>
                                    <th>Tribe</th>
                                    <th>Points</th>
                                    <% if (world.config.victory_points) { -%>
                                        <th title="Victory Points">VP</th>
                                    <% } -%>
                                    <th>Villages</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% for (let player of players) { %>
                                    <tr data-player-id="<%= player.id %>">
                                        <td><%= player.rank %></td>
                                        <td><a href="/stats/<%= marketId %>/<%= world.num %>/players/<%= player.id %>"><%= player.name %></a></td>
                                        
                                        <% if (player.tribe_id) { -%>
                                            <td><a href="/stats/<%= marketId %>/<%= world.num %>/tribes/<%= player.tribe_id %>"><%= player.tribe_tag %></a></td>
                                        <% } else { -%>
                                            <td>-</td>
                                        <% } -%>

                                        <td><%= formatNumbers(player.points) %></td>

                                        <% if (world.config.victory_points) { -%>
                                            <td><%= formatNumbers(player.victory_points) %></td>
                                        <% } -%>

                                        <td><%= formatNumbers(player.villages) %></td>
                                    </tr>
                                <% } %>
                            </tbody>
                        </table>

                        <div class="actions">
                            <a href="/stats/<%= marketId %>/<%= world.num %>/players/">View complete players ranking</a>
                        </div>
                    </section>

                    <section>
                        <h2>Statistics</h2>

                        <table>
                            <tr>
                                <td><%= formatNumbers(world.player_count) %> players</td>
                                <td><a href="#">View player statistics</a></td>
                            </tr>
                            <tr>
                                <td><%= formatNumbers(world.village_count) %> Villages</td>
                                <td><a href="#">View village statistics</a></td>
                            </tr>
                            <tr>
                                <td><%= formatNumbers(world.tribe_count) %> Tribes</td>
                                <td><a href="#">View tribe statistics</a></td>
                            </tr>
                        </table>
                    </section>
                </div>

                <div class="right">
                    <section class="world-map">
                        <h2>World map</h2>

                        <div id="map" class="content-border"></div>

                        <div class="actions">
                            <a href="/maps/<%= marketId %>/<%= world.num %>">View complete world map</a>
                        </div>
                    </section>
                </div>
            </div>
        </main>

        <script type="text/javascript" src="/javascripts/utils.js"></script>
        <script type="text/javascript" src="/javascripts/map.js"></script>
        <script type="text/javascript" src="/javascripts/stats.js"></script>
    </body>
</html>
