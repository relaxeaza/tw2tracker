<table>
    <colgroup>
        <col width="50px">
        <col width="*">
        <col width="50px">
        <col width="50px">
        <col width="50px">
        <col width="50px">
    </colgroup>
    <thead>
        <tr>
            <th>Rank</th>
            <th>Name</th>
            <th>Tag</th>
            <th>Points</th>
            <th>Villages</th>
            <th>Members</th>
        </tr>
    </thead>
    <tbody>
        <% for (let tribe of results) { %>
            <tr>
                <td><%= tribe.rank.toLocaleString('pt-BR') %></td>
                <td><a href="/stats/<%= marketId %>/<%= world.num %>/tribes/<%= tribe.id %>/"><%= tribe.name %></a></td>
                <td><a href="/stats/<%= marketId %>/<%= world.num %>/tribes/<%= tribe.id %>/"><%= tribe.tag %></a></td>
                <td><%= tribe.points.toLocaleString('pt-BR') %></td>
                <td><%= tribe.villages.toLocaleString('pt-BR') %></td>
                <td><%= tribe.members.toLocaleString('pt-BR') %></td>
            </tr>
        <% } %>
    </tbody>
</table>
