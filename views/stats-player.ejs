<!DOCTYPE html>
<html lang="en">
    <head>
        <title><%= title %></title>
        <meta name="viewport" content="width=1000 initial-scale=1"/>
        <meta name="description" content="Detailed statistics for Tribal Wars 2">
        <link rel='stylesheet' href='/stylesheets/style.css' />
        <link rel='stylesheet' href='/stylesheets/stats.css' />
        <link rel="icon" type="image/png" href="/images/favicon.png"/>
        <script type="text/javascript">
            const {
                marketId,
                worldNumber,
                mapHighlights
            } = <%- JSON.stringify(exportValues) %>

            const STATS_PAGE = 'player'
        </script>
    </head>
    <body>
        <header></header>
        <main class="content-border">
            <h1>
                <a href="/"><%= siteName %></a> /
                Server <a href="/stats/<%= marketId %>/"><%= marketId.toUpperCase() %></a> /
                World <a href="/stats/<%= marketId %>/<%= worldNumber %>/"><%= worldName %></a> /
                Player <a href="/stats/<%= marketId %>/<%= worldNumber %>/players/<%= player.id %>"><%= player.name %></a>
            </h1>

            <div class="content">
                <div class="left">
                    <section id="player">
                        <h2>Player profile</h2>

                        <div class="content-border">
                            <table class="vertical">
                                <colgroup>
                                    <col width="50%">
                                    <col width="50%">
                                </colgroup>
                                <tbody>
                                    <tr>
                                        <th>Rank:</th>
                                        <td><%= formatNumbers(player.rank) %></td>
                                    </tr>
                                    <tr>
                                        <th>Name:</th>
                                        <td><%= player.name %></td>
                                    </tr>
                                    <tr>
                                        <th>Tribe:</th>
                                        <td>
                                            <% if (tribe) { %>
                                                <a href="/stats/<%= marketId %>/<%= worldNumber %>/tribes/<%= tribe.id %>"><%= tribe.name %> (<%= tribe.tag %>)</a>
                                            <% } else { %>
                                                No tribe
                                            <% } %>
                                        </td>
                                    </tr>
                                    <tr>
                                        <th>Villages:</th>
                                        <td><a href="/stats/<%= marketId %>/<%= worldNumber %>/players/<%= player.id %>/villages"><%= formatNumbers(player.villages) %></a></td>
                                    </tr>
                                    <tr>
                                        <th>Points:</th>
                                        <td><%= formatNumbers(player.points) %></td>
                                    </tr>
                                    <tr>
                                        <th>Bash Attack:</th>
                                        <td><%= formatNumbers(player.bash_points_off) %></td>
                                    </tr>
                                    <tr>
                                        <th>Bash Defense:</th>
                                        <td><%= formatNumbers(player.bash_points_def) %></td>
                                    </tr>
                                    <tr>
                                        <th>Average Points/Village:</th>
                                        <td><%= formatNumbers(player.points_per_villages) %></td>
                                    </tr>
                                    <tr>
                                        <th>Village Conquers:</th>
                                        <td>x (+y-z)</td>
                                    </tr>
                                    <tr>
                                        <td><%= formatNumbers(player.best_rank) %></td>
                                        <th>Best Rank:</th>
                                    </tr>
                                    <tr>
                                        <td><%= formatNumbers(player.best_points) %></td>
                                        <th>Most Points:</th>
                                    </tr>
                                    <tr>
                                        <td><%= formatNumbers(player.best_villages) %></td>
                                        <th>Most Villages:</th>
                                    </tr>
                                </tbody>
                            </table>
                        </div>

                        <div class="actions">
                            <a href="/stats/<%= marketId %>/<%= worldNumber %>/players/<%= player.id %>/history">View player history</a>
                        </div>
                    </section>
                </div>

                <div class="right">
                    <section class="world-map">
                        <h2>World map</h2>

                        <div id="map" class="content-border"></div>

                        <div class="actions">
                            <a href="/maps/<%= marketId %>/<%= worldNumber %>">View complete world map</a>
                        </div>
                    </section>
                </div>
            </div>
        </main>

        <script type="text/javascript" src="/javascripts/map.js"></script>
        <script type="text/javascript" src="/javascripts/utils.js"></script>
        <script type="text/javascript" src="/javascripts/stats.js"></script>
    </body>
</html>
