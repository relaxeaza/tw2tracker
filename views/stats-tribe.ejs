<!DOCTYPE html>
<html lang="en">
    <head>
        <title><%= title %></title>
        <meta name="viewport" content="width=1000 initial-scale=1"/>
        <meta name="description" content="Detailed statistics for Tribal Wars 2">
        <link rel='stylesheet' href='/stylesheets/style.css' />
        <link rel='stylesheet' href='/stylesheets/stats.css' />
        <link rel="icon" type="image/png" href="/images/favicon.png"/>
        <script type="text/javascript">
            const {
                marketId,
                worldNumber,
                mapHighlights
            } = <%- JSON.stringify(exportValues) %>

            const STATS_PAGE = 'tribe'
        </script>
    </head>
    <body>
        <header></header>
        <main class="content-border">
            <h1>
                <a href="/"><%= siteName %></a> /
                Server <a href="/stats/<%= marketId %>/"><%= marketId.toUpperCase() %></a> /
                World <a href="/stats/<%= marketId %>/<%= worldNumber %>/"><%= worldName %></a> /
                Tribe <a href="/stats/<%= marketId %>/<%= worldNumber %>/tribes/<%= tribe.id %>"><%= tribe.name %></a>
            </h1>

            <div class="content">
                <div class="left">
                    <section id="tribe">
                        <h2>Tribe profile</h2>

                        <table>
                            <colgroup>
                                <col width="50%">
                                <col width="50%">
                            </colgroup>
                            <tbody>
                                <tr>
                                    <td>Rank:</td>
                                    <td><%= tribe.rank.toLocaleString('pt-BR') %></td>
                                </tr>
                                <tr>
                                    <td>Name:</td>
                                    <td><%= tribe.name %></td>
                                </tr>
                                <tr>
                                    <td>Tag:</td>
                                    <td><%= tribe.tag %></td>
                                </tr>
                                <tr>
                                    <td>Villages:</td>
                                    <td><%= tribe.villages.toLocaleString('pt-BR') %></td>
                                </tr>
                                <tr>
                                    <td>Points:</td>
                                    <td><%= tribe.points.toLocaleString('pt-BR') %></td>
                                </tr>
                                <tr>
                                    <td>Members:</td>
                                    <td><a href="/stats/<%= marketId %>/<%= worldNumber %>/tribes/<%= tribe.id %>/members"><%= tribe.members.toLocaleString('pt-BR') %></a></td>
                                </tr>
                                <tr>
                                    <td>Bash Attack:</td>
                                    <td><%= tribe.bash_points_off.toLocaleString('pt-BR') %></td>
                                </tr>
                                <tr>
                                    <td>Bash Defense:</td>
                                    <td><%= tribe.bash_points_def.toLocaleString('pt-BR') %></td>
                                </tr>
                                <tr>
                                    <td>Average Points/Member:</td>
                                    <td><%= tribe.points_per_member.toLocaleString('pt-BR') %></td>
                                </tr>
                                <tr>
                                    <td>Average Points/Village:</td>
                                    <td><%= tribe.points_per_villages.toLocaleString('pt-BR') %></td>
                                </tr>
                                <tr>
                                    <td>Member Changes:</td>
                                    <td>-</td>
                                </tr>
                                <tr>
                                    <td>Village Conquers:</td>
                                    <td>x (+y-z)</td>
                                </tr>
                                <tr>
                                    <td>Best Rank:</td>
                                    <td><%= tribe.best_rank.toLocaleString('pt-BR') %></td>
                                </tr>
                                <tr>
                                    <td>Most Points:</td>
                                    <td><%= tribe.best_points.toLocaleString('pt-BR') %></td>
                                </tr>
                                <tr>
                                    <td>Most Villages:</td>
                                    <td><%= tribe.best_villages.toLocaleString('pt-BR') %></td>
                                </tr>
                                <tr>
                                    <td>Creation Date:</td>
                                    <td><%= tribe.creating_date.toLocaleString('pt-BR') %></td>
                                </tr>
                            </tbody>
                        </table>

                        <div class="actions">
                            <a href="/stats/<%= marketId %>/<%= worldNumber %>/tribes/<%= tribe.id %>/history">View tribe history</a>
                        </div>
                    </section>
                </div>

                <div class="right">
                    <section class="world-map">
                        <h2>World map</h2>

                        <div id="map" class="content-border"></div>

                        <div class="actions">
                            <a href="/maps/<%= marketId %>/<%= worldNumber %>">View complete world map</a>
                        </div>
                    </section>
                </div>
            </div>
        </main>

        <script type="text/javascript" src="/javascripts/map.js"></script>
        <script type="text/javascript" src="/javascripts/utils.js"></script>
        <script type="text/javascript" src="/javascripts/stats.js"></script>
    </body>
</html>
