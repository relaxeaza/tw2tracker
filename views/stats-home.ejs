<!DOCTYPE html>
<html lang="en">
    <%- include('includes/head-stats.ejs') %>
    <body>
        <header></header>
        <%- include('includes/menu.ejs') %>

        <main class="content-border">
            <%- include('includes/navigation.ejs') %>

            <div class="content">
                <div class="single">
                    <section id="markets">
                        <% for (let market of markets) { -%>
                            <div class="market">
                                <a href="/stats/<%= market.id %>">
                                    <div class="market-title">
                                        <span class="flag flag-<%= market.id %>"><%= market.id.toUpperCase() %></span>
                                    </div>
                                    <div class="info">
                                        <div class="stats">
                                            <fieldset>
                                                <legend>Statistics:</legend>
                                                <ul>
                                                    <li><%= formatNumbers(market.player_count) %> players</li>
                                                    <li><%= formatNumbers(market.tribe_count) %> tribes</li>
                                                    <li><%= formatNumbers(market.village_count) %> villages</li>
                                                </ul>
                                            </fieldset>
                                        </div>
                                        <div class="worlds">
                                            <fieldset>
                                                <legend>Worlds:</legend>
                                                <ul>
                                                    <li>Open: <%= formatNumbers(market.open_world_count) %></li>
                                                    <li>Closed: <%= formatNumbers(market.closed_world_count) %></li>
                                                </ul>
                                            </fieldset>
                                        </div>
                                    </div>
                                </a>
                            </div>
                        <% } -%>
                    </section>
                </div>
            </div>
        </main>
    </body>
</html>
