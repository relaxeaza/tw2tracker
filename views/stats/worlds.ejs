<!DOCTYPE html>
<html lang="en">
    <%- include('../head.ejs') %>
    <body>
        <header></header>
        <%- include('../menu.ejs') %>

        <main class="content-border">
            <%- include('../navigation.ejs') %>

            <div class="content">
                <div class="single">
                    <section id="worlds">
                        <% for (let [label, data] of worlds) { -%>
                            <% if (data.length) { -%>
                                <div>
                                    <h2><%= label %></h2>
                                    <div>
                                        <% for (let world of data) { -%>
                                            <a href="/stats/<%= marketId %>/<%= world.num %>">
                                                <div class="world">
                                                    <div class="world-title">
                                                        <span class="flag-<%= marketId %>"></span>
                                                        <%= world.name %><sup><%= world.num %></sup>
                                                    </div>
                                                    <div class="info">
                                                        <div class="stats">
                                                            <fieldset>
                                                                <legend>Statistics:</legend>
                                                                <ul>
                                                                    <li><%= formatNumbers(world.player_count) %> players</li>
                                                                    <li><%= formatNumbers(world.tribe_count) %> tribes</li>
                                                                    <li><%= formatNumbers(world.village_count) %> villages</li>
                                                                </ul>
                                                            </fieldset>
                                                        </div>

                                                        <% if (world.config) { -%>
                                                            <div class="settings">
                                                                <fieldset>
                                                                    <legend>Settings:</legend>
                                                                    <ul>
                                                                        <li>World Type: <% __append(world.config.victory_points ? 'Victory Points' : 'Domination') %></li>
                                                                        <li>Troop relocation: <% __append(world.config.relocate_units ? 'Enabled' : 'Disabled') %></li>
                                                                    </ul>
                                                                </fieldset>
                                                            </div>
                                                        <% } -%>
                                                    </div>

                                                    <% if (world.open_date || world.close_date) { -%>
                                                        <div class="world-dates">
                                                            <% if (world.open_date) __append('Opened: ', formatDate(world.open_date, 'day-only')) -%>
                                                            <% if (world.close_date) __append('- Closed: ', formatDate(world.close_date, 'day-only')) -%>
                                                        </div>
                                                    <% } -%>
                                                </div>
                                            </a>
                                        <% } -%>
                                    </div>
                                </div>
                            <% } -%>
                        <% } -%>
                    </section>
                </div>
            </div>
        </main>

        <%- include('../footer.ejs') %>
    </body>
</html>
