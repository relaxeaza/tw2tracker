<!DOCTYPE html>
<html lang="en">
    <%- include('../head.ejs') %>
    <body>
        <header></header>
        <%- include('../menu.ejs') %>

        <main class="content-border">
            <%- include('../navigation.ejs') %>

            <div class="content">
                <div class="left">
                    <section id="players">
                        <h2>Tribe Villages</h2>

                        <div class="content-border">
                            <table class="quick-highlight">
                                <colgroup>
                                    <col width="*">
                                    <col width="70px">
                                    <col width="60px">
                                    <col width="*">
                                </colgroup>
                                <thead>
                                    <tr>
                                        <th>Village</th>
                                        <th>Coords</th>
                                        <th>Points</th>
                                        <th>Owner</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% for (let village of villages) { %>
                                        <tr data-id="<%= village.village_id %>" data-highlight-type="villages">
                                            <td><a href="/stats/<%= marketId %>/<%= worldNumber %>/villages/<%= village.village_id %>/"><%= village.village_name %></a></td>
                                            <td><%= village.village_x %>|<%= village.village_y %></td>
                                            <td><%= formatNumbers(village.village_points) %></td>
                                            <td><a href="/stats/<%= marketId %>/<%= worldNumber %>/players/<%= village.player_id %>/"><%= village.player_name %></a></td>
                                        </tr>
                                    <% } %>
                                </tbody>
                            </table>

                            <%- include('../pagination.ejs') %>
                        </div>
                    </section>
                </div>

                <div class="right">
                    <section class="world-map">
                        <h2>World map</h2>

                        <div id="map" class="content-border"></div>

                        <div class="actions">
                            <a href="/maps/<%= marketId %>/<%= worldNumber %>">View complete world map</a>
                        </div>
                    </section>
                </div>
            </div>
        </main>

        <%- include('../maps/tooltip.ejs') %>
        <%- include('../footer.ejs') %>

        <script type="text/javascript">
            const {
                marketId,
                worldNumber,
                tribe,
                mapHighlights,
                mapHighlightsType
            } = <%- JSON.stringify(exportValues) %>
        </script>
        <script type="text/javascript" src="/javascripts/map.js"></script>
        <script type="text/javascript" src="/javascripts/utils.js"></script>
        <script type="text/javascript" src="/javascripts/stats.js"></script>
    </body>
</html>
