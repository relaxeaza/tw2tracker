<!DOCTYPE html>
<html lang="en">
    <%- include('../head.ejs') %>
    <body>
        <header></header>
        <%- include('../menu.ejs') %>

        <main class="content-border">
            <%- include('../navigation.ejs') %>

            <div class="content">
                <div class="left">
                    <section id="player">
                        <h2>Player profile</h2>

                        <div class="content-border">
                            <table class="vertical">
                                <colgroup>
                                    <col width="50%">
                                    <col width="50%">
                                </colgroup>
                                <tbody>
                                    <tr>
                                        <th>Rank:</th>
                                        <td><%= formatNumbers(player.rank) %></td>
                                    </tr>
                                    <tr>
                                        <th>Name:</th>
                                        <td><%= player.name %></td>
                                    </tr>
                                    <tr>
                                        <th>Tribe:</th>
                                        <td>
                                            <% if (tribe) { %>
                                                <a href="/stats/<%= marketId %>/<%= worldNumber %>/tribes/<%= tribe.id %>"><%= tribe.name %> (<%= tribe.tag %>)</a>
                                            <% } else { %>
                                                No tribe
                                            <% } %>
                                        </td>
                                    </tr>
                                    <tr>
                                        <th>Villages:</th>
                                        <td><a href="/stats/<%= marketId %>/<%= worldNumber %>/players/<%= player.id %>/villages"><%= formatNumbers(player.villages) %></a></td>
                                    </tr>
                                    <tr>
                                        <th>Points:</th>
                                        <td><%= formatNumbers(player.points) %></td>
                                    </tr>
                                    <tr>
                                        <th>Bash Attack:</th>
                                        <td><%= formatNumbers(player.bash_points_off) %></td>
                                    </tr>
                                    <tr>
                                        <th>Bash Defense:</th>
                                        <td><%= formatNumbers(player.bash_points_def) %></td>
                                    </tr>
                                    <tr>
                                        <th>Average Points/Village:</th>
                                        <td><%= formatNumbers(player.points_per_villages) %></td>
                                    </tr>
                                    <tr>
                                        <th>Village Conquers:</th>
                                        <td>
                                            <a href="/stats/<%= marketId %>/<%= worldNumber %>/players/<%= player.id %>/conquests"><%= formatNumbers(conquestCount[conquestTypes.GAIN] + conquestCount[conquestTypes.LOSS]) %></a>
                                            (+<a href="/stats/<%= marketId %>/<%= worldNumber %>/players/<%= player.id %>/conquests/<%= conquestTypes.GAIN %>"><%= formatNumbers(conquestCount[conquestTypes.GAIN]) %></a>
                                            -<a href="/stats/<%= marketId %>/<%= worldNumber %>/players/<%= player.id %>/conquests/<%= conquestTypes.LOSS %>"><%= formatNumbers(conquestCount[conquestTypes.LOSS]) %></a>)
                                        </td>
                                    </tr>
                                    <tr>
                                        <th>Best Rank:</th>
                                        <td><%= formatNumbers(player.best_rank) %> <small class="right"><%= formatDate(player.best_rank_date, 'hours-only') %></small></td>
                                    </tr>
                                    <tr>
                                        <th>Most Points:</th>
                                        <td><%= formatNumbers(player.best_points) %> <small class="right"><%= formatDate(player.best_points_date, 'hours-only') %></small></td>
                                    </tr>
                                    <tr>
                                        <th>Most Villages:</th>
                                        <td><%= formatNumbers(player.best_villages) %> <small class="right"><%= formatDate(player.best_villages_date, 'hours-only') %></small></td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>

                        <div class="actions">
                            <a href="/stats/<%= marketId %>/<%= worldNumber %>/players/<%= player.id %>/history">View player history</a>
                        </div>
                    </section>
                </div>

                <div class="right">
                    <section class="world-map">
                        <h2>World map</h2>

                        <div id="map" class="content-border"></div>

                        <div class="actions">
                            <a href="/maps/<%= marketId %>/<%= worldNumber %>">View complete world map</a>
                        </div>
                    </section>
                </div>
            </div>
        </main>

        <%- include('../footer.ejs') %>

        <script type="text/javascript">
            const {
                marketId,
                worldNumber,
                mapHighlights,
                mapHighlightsType,
                player
            } = <%- JSON.stringify(exportValues) %>
        </script>
        <script type="text/javascript" src="/javascripts/map.js"></script>
        <script type="text/javascript" src="/javascripts/utils.js"></script>
        <script type="text/javascript" src="/javascripts/stats.js"></script>
    </body>
</html>
