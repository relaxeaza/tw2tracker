<!DOCTYPE html>
<html lang="en">
    <%- include('./head.ejs') %>
    <body id="admin">
        <header></header>
        <%- include('./menu.ejs') %>

        <main class="content-border">
            <%- include('./navigation.ejs') %>

            <div class="content">
                <div class="left">
                    <section>
                        <h1>Worlds</h1>

                        <% for (let world of worlds) { %>
                            <% const world_last_sync = world.last_sync ? new Date(world.last_sync) : 'Never' %>

                            <div class="world">
                                <div class="short-info">
                                    <span class="flag-<%= world.market %>"><%= world.market %><%= world.num %></span> -
                                    <span class="last-sync">Last sync: <%= formatDate(world_last_sync) %></span>
                                    <% if (!world.open) { __append(' (Closed)') } -%>
                                </div>
                                <ul class="actions">
                                    <% if (world.open) { -%>
                                        <li><a href="/admin/scrapper/<%= world.market %>/<%= world.num %>">Sync now</a></li>
                                    <% } -%>
                                </ul>
                            </div>
                        <% } %>
                    </section>
                </div>

                <div class="right">
                    <section>
                        <h1>Logging</h1>
                    </section>
                </div>
            </div>
        </main>

        <%- include('./footer.ejs') %>
    </body>
</html>
